<!-- Latest compiled JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel ="stylesheet" href="css/style2.css">
    <link rel ="shortcut icon" href="image/download (1).jpeg" type ="image/x-jpeg">
</head>
<body>
{{>navbar}}

<!-- main header -->
<div class="container-fluid main_header">
    <div class="row">
        <div class ="col-md-10 col-12 mx-auto">
            <div class="main_content">
                <form class="tempform">
                    <input type="text"id="cityName" placeholder="Enter Your City Name" autocomplete="off">
                    <input type="submit" value="Search" id="submitBtn">
                </form>
            </div>

            <div class="temp_Information">
                <div class="top_layer">
                    <p id ='day'>Tuesday</p>
                    <p id ='todaydate'>8 March</p>
                </div>
                {{!-- mainlayer --}}
                <div class="main_layer">
                    <p id ="city_name">Get Output Here</p>
                    <div class="middle_layer data_hide">
                        <p id="temp"><span>0</span><sup>o</sup>C</p>
                        <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                    </div>
                </div>
            </div>
            

         </div>
    </div>

</div>        

            <!-- footer -->
            
<script src="js/main.js"></script>

</body>
</html>